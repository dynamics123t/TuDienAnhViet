            android:name="com.luantan.tratudienanhviet.Screens.OnBoardingActivity"
            android:theme="@style/Theme.Onboarding" />
        <activity
            android:name="com.luantan.tratudienanhviet.Screens.IntroduceActivity"
            android:theme="@style/Theme.Onboarding">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Theme.TraTuDienAnhViet_" />
